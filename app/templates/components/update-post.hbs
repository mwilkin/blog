{{#if updatePostForm}}
  <h4>Update {{post.owner}}'s {{post.type}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=post.title id="title"}}
      </div>

      <div class="form-group">
        <label for="body">Body</label>
        {{input value=post.body id="body"}}
      </div>

      <div class="form-group">
        <label for="date">Date</label>
        {{input value=post.date id="date"}}
      </div>

      <div class="form-group">
        <label for="category">Category</label>
        {{input value=post.category id="category"}}
      </div>

      <button class="btn btn-success"{{action 'update' post}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-warning"{{action 'updatePostForm'}}>Update</button>
{{/if}}
