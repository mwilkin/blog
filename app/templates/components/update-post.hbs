{{#if updatePostForm}}
  <h4>Update {{post.owner}}'s {{post.type}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title" placeholder=post.title}}
      </div>

      <div class="form-group">
        <label for="body">Body</label>
        {{input value=body id="body" placeholder=post.body}}
      </div>

      <div class="form-group">
        <label for="date">Date</label>
        {{input value=date id="date" placeholder=post.date}}
      </div>

      <div class="form-group">
        <label for="category">Category</label>
        {{input value=category id="category" placeholder=post.category}}
      </div>

      <button class="btn btn-success"{{action 'update' post}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-warning"{{action 'updatePostForm'}}>Update</button>
{{/if}}
